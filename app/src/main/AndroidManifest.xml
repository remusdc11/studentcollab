<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studentcollab">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.SearchActivity"
            android:launchMode="singleTop" />
        <activity android:name=".Activities.WriteReviewActivity" />
        <activity android:name=".Activities.AddActivity" />
        <activity android:name=".Activities.EmptyActivity" />
        <activity android:name=".Activities.OnboardingActivity" />
        <activity
            android:name=".Activities.FeedActivity"
            android:launchMode="singleTop" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name">

        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>